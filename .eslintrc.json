{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "indent": ["error", 4],
    "semi": ["error", "always"]
  }
}
